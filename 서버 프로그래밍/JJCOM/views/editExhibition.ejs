<%- include('partials/header', { title: '전시 수정' , cssFile: 'edit' }) %>

   <body>
      <h1>전시 수정</h1>
      <form action="/exhibitions/<%= exhibition._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
         <input type="text" name="school" value="<%= exhibition.school %>" required>
         <input type="text" name="major" value="<%= exhibition.major %>" required>
         <input type="text" name="exhibition_name" value="<%= exhibition.exhibition_name %>" required>
         <input type="text" name="exhibition_location" value="<%= exhibition.exhibition_location %>" required>
         <input type="date" name="start_date" value="<%= exhibition.start_date.toISOString().split('T')[0] %>" required>
         <input type="date" name="end_date" value="<%= exhibition.end_date.toISOString().split('T')[0] %>" required>
         <input type="time" name="exhibition_time" value="<%= exhibition.exhibition_time %>" required>
         <textarea name="description" required><%= exhibition.description %></textarea>
         <input type="file" name="poster">
         <button type="submit">수정 완료</button>
      </form>
   </body>

   </html>